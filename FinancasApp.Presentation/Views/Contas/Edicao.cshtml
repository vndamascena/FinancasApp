@model FinancasApp.Presentation.Models.Contas.ContasEdicaoViewModel


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Edição de contas</h4>
<p>Preencha o formulário para editar  contas a pagar ou a receber.</p>
<hr />

@using(Html.BeginForm())
{
    <div>
        @Html.HiddenFor(model => model.Id)
    </div>

    <div class="row mb-2">
        <div class="col-md-6">
            <label>Nome da conta:</label>
            @Html.TextBoxFor(model => model.Nome, new {
             @class = "form-control",
             @placeholder = "Digite o nome da conta aqui."
        })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>
        <div class="col-md-3">
            <label>Data da conta:</label>
            @Html.TextBoxFor(model => model.Data, "{0:yyyy-MM-dd}", new {
            @class = "form-control",
            @type = "date"
            })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </div>
        </div>

        <div class="col-md-3">
            <label>Valor da conta:</label>
            @Html.TextBoxFor(model => model.Valor, new {
        @class = "form-control",
        @placeholder = "Digite o valor aqui."
        })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Valor)
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-3">
            <label>Categoria da conta:</label>
            @Html.DropDownListFor(model => model.CategoriaId, Model.Categorias,
                "Escolha uma opção", new { @class = "form-select" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.CategoriaId)
            </div>
        </div>
        <div class="col-md-3">
            <label>Tipo da conta:</label>
            <div>
                @Html.RadioButtonFor(model => model.Tipo, 1) <span>Conta a receber</span>
            </div>
            <div>
                @Html.RadioButtonFor(model => model.Tipo, 2) <span>Conta a pagar</span>
            </div>
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Tipo)
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-12">
            <label>Descrição da conta:</label>
            @Html.TextAreaFor(model => model.Descricao, new {
        @class = "form-control"
        })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-12">
            <input type="submit" class="btn btn-outline-success"
                   value="Salvar Alterações" />
            &nbsp;
            <a href="/Contas/Consulta" class="btn btn-outline-primary">
                Ir para a consulta
            </a>
        </div>
    </div>
}