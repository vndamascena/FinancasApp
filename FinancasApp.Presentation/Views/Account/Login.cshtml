@* Definindo a classe de modelo de dados da página *@
@model FinancasApp.Presentation.Models.Account.LoginViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="text-center">
    <h3>Acessar Sistema</h3>
    <p>Entre com suas credenciais de acesso:</p>
</div>

<hr />
@if(TempData["MensagemErro"] != null)
{
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Erro!</strong> @TempData["MensagemErro"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}


@using (Html.BeginForm())
{
    <div class="mb-2">
        <label>Email de acesso:</label>
        @Html.TextBoxFor(model => model.Email, new {
    @class = "form-control",
    @placeholder = "Digite seu email aqui."
    })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="mb-2">
        <label>Senha de acesso:</label>
        @Html.PasswordFor(model => model.Senha, new {
    @class = "form-control",
    @placeholder = "Digite sua senha aqui."
    })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
        <div class="text-end">
            <a href="/Account/ForgotPassword" class="text-dark">Esqueci minha senha.</a>
        </div>
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" value="Entrar" class="btn btn-dark" />
    </div>

    <div class="mb-2 d-grid">
        <a href="/Account/Register" class="btn btn-light">
            Não possui conta? <strong>Cadastre-se aqui!</strong>
        </a>
    </div>
}


