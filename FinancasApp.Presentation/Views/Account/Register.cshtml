@model FinancasApp.Presentation.Models.Account.RegisterViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="text-center">
    <h3>Criar conta de usuário</h3>
    <p>Entre com os seus dados para criar uma conta:</p>
</div>
<hr />
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Erro!</strong> @TempData["MensagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@using (Html.BeginForm())
{
    <div class="mb-2">
        <label>Nome do usuário:</label>
        @Html.TextBoxFor(model => model.Nome, new {
    @class = "form-control",
    @placeholder = "Digite seu nome aqui."
    })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
    </div>
    <div class="mb-2">
        <label>Email do usuário:</label>
        @Html.TextBoxFor(model => model.Email, new {
    @class = "form-control",
    @placeholder = "Digite seu email aqui."
    })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <div class="mb-2">
        <label>Senha da acesso:</label>
        @Html.PasswordFor(model => model.Senha, new {
    @class = "form-control",
    @placeholder = "Digite seu senha aqui."
    })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
    </div>
    <div class="mb-2">
        <label>Confirme a sua senha:</label>
        @Html.PasswordFor(model => model.SenhaConfirmacao, new {
    @class = "form-control",
    @placeholder = "Confirme seu senha aqui."
    })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
        </div>
    </div>
    <div class="mb-2 d-grid">
        <input type="submit" value="Realizar Cadastro"
               class="btn btn-dark" />

    </div>
    <div class="mb-2 d-grid">
        <a href="/Account/Login" class="btn btn-light">
            Já possui conta? <strong>Acesse aqui!</strong>
        </a>
    </div>
}